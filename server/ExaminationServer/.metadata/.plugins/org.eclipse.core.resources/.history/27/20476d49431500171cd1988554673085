<meta charset="UTF-8">
<title>Insert title here</title>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script>
var ctxPath = "examData";
$(function(){                
    $("#postPerson, #postMessage").on("click", function(){
        $.ajax({
            url: ctxPath+"/api/collection",
            type: "POST",
            data: '{"examinationID":"' + $(searchTerm).val() + '"", "index":"0"}',
            contentType: "application/json",
            cache: false,
            dataType: "text"
        });
    });                
});
</script>

</head>
<body>
<p> Exempel på söktermer: Pollen, Nötter, Gummi, Getingstick</p>
<input type=text id="searchTerm">
<li><button id="postPerson">Post Person</button></li>
